@using AppSaveMoney.EntityLayer;
@model IEnumerable<Categoria>

@{
    ViewData["Title"] = "Categorías";
}

<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Categorías</h5>
        <a asp-action="Create" class="btn btn-sm btn-light">
            <i class="bi bi-plus"></i> Nueva Categoría
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Tipo</th>
                        <th>Activo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Descripcion</td>
                            <td>
                                <span class="badge @(item.EsGasto ? "bg-danger" : "bg-success")">
                                    @(item.EsGasto ? "Gasto" : "Ingreso")
                                </span>
                            </td>
                            <td>
                                <span class="badge @(item.Activo ? "bg-success" : "bg-danger")">
                                    @(item.Activo ? "Activo" : "Inactivo")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                        Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                        Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>